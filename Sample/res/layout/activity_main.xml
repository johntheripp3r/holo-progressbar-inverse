<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ProgressBar 
       android:id="@+id/progressbar_large"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:animationResolution="16"
       android:indeterminateOnly="true"
       style="@style/Widget.Holo.ProgressBar.Large.Inverse"/>
        
    <ProgressBar 
        android:id="@+id/progressbar"
        android:layout_below="@id/progressbar_large"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Holo.ProgressBar.Small.Inverse"/>

    
    
</RelativeLayout>